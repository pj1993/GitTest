<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_alignParentRight="true"
tools:context="com.lnet.gittest.ui.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/iv_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/m1"
                />

            <TextView

                android:id="@+id/tv_text1"
                android:layout_toRightOf="@+id/iv_picture"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="阔立即哇"
                android:textSize="17dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_toRightOf="@+id/iv_picture"
                android:layout_below="@+id/tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="1970年加入，我要好好学习天天向上"
                android:gravity="center"
                android:textSize="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#f2f2ef"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的定阅"
                android:textSize="15dp"
                android:gravity="center"/>
            <View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#e3e3e1"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的收藏"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#e3e3e1"
                android:layout_gravity="center_vertical"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的下载"
                android:textSize="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#efebeb"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/tv_textCourse"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="在我学的课程"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/im_dayutubioa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/m2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>
            <!--android:layout_toRightOf="@+id/tv_textAll"-->
            <!--android:layout_toEndOf="@+id/tv_textAll" />-->
            <TextView
                android:id="@+id/tv_textAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部"
                android:textSize="12dp"
                android:layout_toLeftOf="@+id/im_dayutubioa"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_ddp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="DDP实战项目开发"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/iv_picturem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/m3"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_alignTop="@+id/tv_ddp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            //android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_picturem1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_ddp"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:text="已学1%"
                android:textColor="#04c046"
                android:textSize="13dp" />


        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#f2f2ef"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/tv_AndroidKaiFa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Android开发环境搭建"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_picturem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:src="@drawable/m4"
                android:layout_alignTop="@+id/tv_AndroidKaiFa"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_picturem2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_AndroidKaiFa"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:text="已学1%"
                android:textColor="#04c046"
                android:textSize="13dp" />


        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#f2f2ef"
            android:layout_marginLeft="10dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/tv_JavaWeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="30天轻松掌握JavaWeb\n视频"
                android:textSize="15dp"
                android:singleLine="false"
                />

            <ImageView
                android:id="@+id/iv_picturem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:src="@drawable/m5"
                android:layout_alignTop="@+id/tv_JavaWeb"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_picturem3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_JavaWeb"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:text="已学1%"
                android:textColor="#04c046"
                android:textSize="13dp" />


        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#f2f2ef"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
</ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="btnAccout"
        android:text="账号" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="首页"
        android:onClick="btnFirst"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="分类"
        android:onClick="btnfenlei"/>
</LinearLayout>
</FrameLayout>
